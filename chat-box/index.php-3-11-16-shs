 $(function() {

    startRefresh();

});



function startRefresh() {

    setTimeout(startRefresh,1000);

    $.get('message.php?ciadminId=<?php echo $ciadminId; ?>', function(data) {

        $('#content_div_id').html(data);    

    });

}

