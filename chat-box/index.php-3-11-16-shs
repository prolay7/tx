    			        chat.send(text, name, job_id, bid_id, trns_id, type);	

    			        $('#sendie').val("");    			        

                    } else {                    

    					$('#sendie').val(text.substring(0, maxLength));    					

    				} 

					}else{

					alert("message box is empty");	

					}

    			  

